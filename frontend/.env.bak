# Frontend Environment Configuration
# Hebrew Sales Call Analysis System

# API Configuration
REACT_APP_BACKEND_URL=http://localhost:3000

# Application Configuration
REACT_APP_NAME=Hebrew Sales Call Analysis System
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG_MODE=true

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=50MB
REACT_APP_ALLOWED_AUDIO_TYPES=audio/mpeg,audio/wav,audio/mp3,audio/mp4,audio/m4a,audio/aac,audio/ogg

# Hebrew Language Configuration
REACT_APP_DEFAULT_LOCALE=he-IL
REACT_APP_RTL_SUPPORT=true

# Development Configuration
REACT_APP_ENABLE_HOT_RELOAD=true
REACT_APP_ENABLE_SOURCE_MAPS=true

# Performance Configuration
REACT_APP_ENABLE_CACHE=true
REACT_APP_CACHE_DURATION=300000

# Error Reporting (for future use)
REACT_APP_ENABLE_ERROR_REPORTING=false
REACT_APP_ERROR_REPORTING_URL=

# Authentication (for future use)
REACT_APP_ENABLE_AUTH=false
REACT_APP_AUTH_PROVIDER=

# Build Configuration
GENERATE_SOURCEMAP=false

# Frontend Configuration
PORT=3001

# Audio API Configuration
REACT_APP_API_URL=http://localhost:3002
